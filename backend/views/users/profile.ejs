<% layout("/layouts/boilerplate") %>

<div class="container mt-5 mb-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-lg rounded-5 p-5 bg-white">
        <!-- Profile Header -->
        <div class="text-center mb-4">
          <img
            src="<%= user.profileImage || 'https://cdn-icons-png.flaticon.com/512/847/847969.png' %>"
            alt="Profile Picture"
            width="130"
            class="rounded-circle shadow-sm mb-3"
          />

          <h2 class="fw-bold mb-1"><%= user.username %></h2>
          <p class="text-muted mb-0"><%= user.email %></p>
        </div>

        <hr class="my-4" />

        <!-- Profile Details -->
        <div class="mb-3 p-3 bg-light rounded-3 shadow-sm">
          <h5 class="fw-semibold text-secondary">Username</h5>
          <p class="fs-5"><%= user.username %></p>
        </div>

        <div class="mb-3 p-3 bg-light rounded-3 shadow-sm">
          <h5 class="fw-semibold text-secondary">Email</h5>
          <p class="fs-5"><%= user.email %></p>
        </div>

        <% if(user.bio) { %>
        <div class="mb-3 p-3 bg-light rounded-3 shadow-sm">
          <h5 class="fw-semibold text-secondary">Bio</h5>
          <p class="fs-5"><%= user.bio %></p>
        </div>
        <% } %>

        <!-- Action Buttons -->
        <div class="d-flex justify-content-between mt-4">
          <a href="/" class="btn btn-outline-secondary px-4">Explore More</a>
          <a href="/profile/edit" class="btn btn-primary px-4">Edit Profile</a>
        </div>
      </div>
    </div>
  </div>
</div>
