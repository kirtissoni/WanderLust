<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card p-5 shadow-lg rounded-5">
        <h2 class="text-center mb-4 fw-bold">Verify Email</h2>
        <p class="text-center">Enter the OTP sent to <%= email %></p>

        <form action="/verify" method="POST">
          <input type="hidden" name="email" value="<%= email %>" />
          <div class="mb-3">
            <label for="otp" class="form-label fw-semibold">OTP</label>
            <input
              type="text"
              class="form-control"
              id="otp"
              name="otp"
              required
            />
          </div>
          <div class="d-flex justify-content-between mt-4">
            <a href="/resend-otp" class="btn btn-outline-secondary px-4"
              >Resend OTP</a
            >
            <button type="submit" class="btn btn-primary px-4">Verify</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
